<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>main</servlet-name>
        <jsp-file>/WEB-INF/views/main.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/WEB-INF/views/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>error</servlet-name>
        <jsp-file>/WEB-INF/views/error.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>studentManager</servlet-name>
        <jsp-file>/WEB-INF/views/studentManager.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>studentManager</servlet-name>
        <url-pattern>/studentManager</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginOut</servlet-name>
        <jsp-file>/WEB-INF/views/exit.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginOut</servlet-name>
        <url-pattern>/exit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>teacherManager</servlet-name>
        <jsp-file>/WEB-INF/views/teacherManager.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>teacherManager</servlet-name>
        <url-pattern>/teacherManager</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>courseManager</servlet-name>
        <jsp-file>/WEB-INF/views/courseManager.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>courseManager</servlet-name>
        <url-pattern>/courseManager</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>teachManager</servlet-name>
        <jsp-file>/WEB-INF/views/teachManager.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>teachManager</servlet-name>
        <url-pattern>/teachManager</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>gradeManager</servlet-name>
        <jsp-file>/WEB-INF/views/gradeManager.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>gradeManager</servlet-name>
        <url-pattern>/gradeManager</url-pattern>
    </servlet-mapping>


</web-app>